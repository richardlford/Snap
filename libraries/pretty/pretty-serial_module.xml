  </block-definition>
  <block-definition s="WEBSer $flash-1-0-255-0 write %'port' %'bytes'" type="command" category="other">
    <comment x="0" y="0" w="193.33528645833292" collapsed="true">Write to the port a list containing numbers</comment>
    <header/>
    <code/>
    <translations/>
    <inputs>
      <input type="%s">port</input>
      <input type="%l"/>
    </inputs>
    <script>
      <block s="doApplyExtension">
